@model DAL.ViewModels.RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2>@Localizer["CreateNewAccount"].Value</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="@Localizer["UserNAme"].Value" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" autocomplete="username" aria-required="true" placeholder="@Localizer["FullName"].Value" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="@Localizer["Email"].Value" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Localizer["Password"].Value" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Phone" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Localizer["Phone"].Value" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>@ViewBag.Notification</label>
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Register"].Value</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}