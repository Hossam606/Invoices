@model DAL.ViewModels.InvoiceViewModel;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h1 style="text-align:center">@Localizer["Products"].Value</h1>
<br />
<br />
<div class="row">

    <div class="col-md-8 offset-md-2">
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>@Localizer["TitleOfProduct"].Value</th>
                    <th>@Localizer["Quantity"].Value</th>
                    <th> @Localizer["Price"].Value</th>
                    <th> @Localizer["Total"].Value</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td class="align-middle">
                                @product.TitleOfProduct
                            </td>
                            <td class="align-middle">
                                @product.Quentity
                            </td>
                            <td class="align-middle">
                                @product.Price 
                            </td>
                            <td class="align-middle">
                                @(product.Price * product.Quentity)$
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>