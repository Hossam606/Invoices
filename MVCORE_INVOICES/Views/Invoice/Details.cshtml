@model DAL.ViewModels.InvoiceViewModel;


<h1 style="text-align:center">Products</h1>
<br />
<br />
<div class="row">

    <div class="col-md-8 offset-md-2">
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th> Price</th>
                    <th> Total</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td class="align-middle">
                                @product.TitleOfProduct
                            </td>
                            <td class="align-middle">
                                @product.Quentity
                            </td>
                            <td class="align-middle">
                                 
                                @product.Price$ 
                            </td>
                            <td class="align-middle">

                                @(product.Price * product.Quentity)$
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>