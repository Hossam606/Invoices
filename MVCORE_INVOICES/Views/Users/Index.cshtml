@model DAL.ViewModels.UserViewModel;
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc;
@inject IHttpContextAccessor HttpContextAccessor;

@{
    ViewData["Title"] = "Home Page";
}


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<style>
    #exampleModalCenter {
        opacity: 23434343332;
        z-index: 323232;
    }
</style>
@Html.AntiForgeryToken()

<div class="container" style="margin-top:3%">

    <div class="row">
        @if (HttpContextAccessor.HttpContext.Session.GetString("IsAdmin") != null && (HttpContextAccessor.HttpContext.Session.GetString("IsAdmin").ToString() == "True"))
        {
            <button type="button" class="btn btn-primary" data-toggle="modal" style="margin-right:20px;" data-target="#exampleModalCenter">
                Add New User
            </button>
        }
        <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
            <div class="col-4">
                <label class="visually-hidden" hidden for="sterm">UserName</label>
                <div class="input-group">
                    <input type="text" class="form-control" value="@Model.STerm" id="sterm" name="sterm" placeholder="Sarch by title">
                </div>
            </div>

            <div class="col-8">
                <button type="submit" class="btn btn-primary">Search</button>
@*                <input type="submit" id="btnExport" class="btn btn-primary" value="Export" />
*@            </div>

        </form>
    </div>
    <br>
    <table class="table table-striped" id="table">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Phone</th>
                @if (HttpContextAccessor.HttpContext.Session.GetString("IsAdmin") != null && (HttpContextAccessor.HttpContext.Session.GetString("IsAdmin").ToString() == "true"))
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem=>item.UserName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem=>item.Email)
                    </td>

                    <td class="align-middle">
                        @Html.DisplayFor(modelItem=>item.Phone)
                    </td>
                    @if (HttpContextAccessor.HttpContext.Session.GetString("IsAdmin") != null && (HttpContextAccessor.HttpContext.Session.GetString("IsAdmin").ToString() == "True"))
                    {
                        <td class="align-middle">
                            <input type="hidden" class="id" id="id" value="@item.Id" />
                            <a class="btn btn-outline-primary edit"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Delete this User?')"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    @Html.Partial("AddPartialView", Model)
    @Html.Partial("UpdatePartialView", Model)



</div>


