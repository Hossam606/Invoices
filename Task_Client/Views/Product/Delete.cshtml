@model Task_Entities.Entities.Product
@{
    ViewData["Title"] = "Delete User";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Delete for <span style="color:crimson">@Model.TitleOfProduct </span> </h1>
        </p>
        <div class="row">
            <div class=" col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="rounded-circle border-info" style="max-width:150px; max-height:250px" id="ProfilPicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="TitleOfProduct" class="control-label"></label>
                    <input asp-for="TitleOfProduct" class="form-control" readonly />
                    <span asp-validation-for="TitleOfProduct" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" readonly />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input asp-for="ImageUrl" class="form-control" readonly />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top:10px;">
                    <form asp-action="Delete" style="margin:15px;">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        console.log("dddd");

        $(document).ready(function () {
            var output = document.getElementById('ProfilPicturePreview');
            output.src = $("#ImageUrl").val();
        })

    </script>
    }