@model Task_Client.Models.UserDisplayModel
@*@model IEnumerable< Task_Entities.Entities.User>*@
@{
    ViewData["Title"] = "Home Page";
}
 
<div class="row">

    <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label class="visually-hidden" for="sterm">UserName</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" value="@Model.STerm" id="sterm" name="sterm" placeholder="Sarch by title">
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/Home/Index" class="btn btn-dark">Reset</a>
        </div>
    </form>

    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr  >                    
                    <th>UserName</th>
                    <th>Email</th>                 
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Users)
                {
                    <tr>
                         
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.UserName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Email)
                        </td>
                         
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Phone)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div style="position:fixed; right: 25px; bottom:65px;" class="text-white">
    <a asp-controller="User" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

